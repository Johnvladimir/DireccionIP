<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.example.john.direccionip.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/Ip"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="5"
            android:hint="Ingrese IP"
            android:inputType="number|numberDecimal"
            android:digits="0123456789."
            android:singleLine="true"
            android:textStyle="bold"
            android:gravity="center"/>

        <EditText
            android:id="@+id/mascara"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:ems="5"
            android:hint="Ingrese mascara"
            android:inputType="number"
            android:singleLine="true"
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/net_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_margin"
            android:text="@string/net_id"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/Broadcast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/custom_margin"
            android:text="@string/broadcast"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Cant_Host"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="5"
                android:background="@drawable/custom_margin"
                android:text="@string/cantidad_de_host"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/ParteRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:layout_weight="5"
                android:background="@drawable/custom_margin"
                android:text="@string/parte_de_red"
                android:textSize="20dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ParteHost"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/custom_margin"
                android:text="@string/parte_de_host"
                android:textSize="20dp" />

            <Button
                android:id="@+id/buscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/ParteHost"
                android:layout_alignParentRight="true"
                android:text="Buscar" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>